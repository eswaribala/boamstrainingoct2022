type Address {
	addressId: ID!
	streetName: String
 	city: String
    pinCode: long 
    customer: Customer 
   
}

input AddressInput {

	addressId: ID!
	doorNo: String
	streetName: String
 	city: String
  state: String
  country: String
  customer: CustomerAddressInput
}


input CustomerAddressInput {

    customerId: ID!
  

}



extend type Query {
	findAllAddresses: [Address]
	findAddress(addressId: ID): Address
}

extend type Mutation {
	createAddress(addressInput:AddressInput):Address
        
}
